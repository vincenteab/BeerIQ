                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="300 mentions of _ notes"
                            android:textSize="13sp"
                            android:textColor="#888" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

