<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/beer_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_foreground"
                android:paddingLeft="20dp"
                app:shapeAppearanceOverlay="@style/RoundedCornerImage">
            </com.google.android.material.imageview.ShapeableImageView>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/baseline_sports_bar_24"
                        app:tint="#40f0c542" />
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/sports_bar_24px"
                        app:tint="#30f0c542" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical"
                    android:paddingTop="40dp">
                    <TextView
                        android:id="@+id/rating_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:text="4.5" />
                    <RatingBar
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        android:isIndicator="true"
                        android:progressTint="#f0c542"
                        android:secondaryProgressTint="#30dadada"
                        android:progressBackgroundTint="@color/grey" />
                    <TextView
                        android:id="@+id/rating_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="142 ratings" />
                </LinearLayout>
                </FrameLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/save_button"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/black"
                    app:iconTint="#f0c542"
                    android:text="Save"
                    app:icon="@drawable/save_icon" />
                <Button
                    android:id="@+id/post_button"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    app:iconTint="#f0c542"
                    android:text="Post"
                    app:icon="@drawable/post_icon" />
            </LinearLayout>

            <!-- Brewery -->
            <TextView
                android:id="@+id/brewery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brewery"
                android:textSize="16sp"
                android:textColor="#555" />

            <!-- Beer Name -->
            <TextView
                android:id="@+id/beerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beer Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- ABV -->
            <TextView
                android:id="@+id/abv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ABV: 5.0%"
                android:textSize="14sp"
                android:textColor="#777" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40dp"
                android:text="Brewer's notes"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#777" />
            <TextView
                android:id="@+id/brewers_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="Lorem ipsum"
                android:textSize="12sp"
                android:textColor="#777" />
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="30dp"
            app:dividerColor="#30f0c542"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="35dp"
                android:paddingBottom="20dp"
                android:gravity="center_horizontal"
                android:text="Style"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#777" />
            <TextView
                android:id="@+id/style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Lager"
                android:textSize="17sp"
                android:textColor="#777" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:gravity="center_horizontal"
                android:text="IBU (Min-Max)"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#777" />
            <TextView
                android:id="@+id/ibu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:gravity="center_horizontal"
                android:text="20-40"
                android:textSize="17sp"
                android:textColor="#777" />

            <com.google.android.material.divider.MaterialDivider
