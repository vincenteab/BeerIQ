<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BeerIQ"
        tools:targetApi="31">
        <activity
            android:name=".data.local.beerDatabase.ImportCsv"
            android:exported="true" />
        <activity
            android:name=".ui.beerList.BeerListActivity"
            android:exported="false"
            android:theme="@style/Theme.BeerIQ" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>
        <activity android:name=".ui.FriendsList.FriendRequestActivity"
            android:exported="true">

        </activity>
        <activity android:name=".ui.FriendsList.FriendsListActivity"
            android:exported="true">
        </activity>
        <activity android:name=".ui.favorites.FavoritesActivity"
            android:label="Favorites">

        </activity>

        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.editprofile.EditProfileFragment"
            android:label="Edit Profile" />


        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.beeriq.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>